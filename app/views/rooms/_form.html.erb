<%= form_for @room do |f| %>


  <div>

    <p>Название</p>
    <%= f.text_field :title %>
  </div>
  <div>
    <p>Описание</p>
    <%= f.text_area :description, :size => "10x5" %>
  </div>
  <div>
   <%= f.submit 'Сохранить', :class => "btn btn-success" %>
   <%= link_to 'Назад', rooms_path, :class => "btn btn-danger", :style=>"margin-left:5%" %>

  </div>
<% end %>