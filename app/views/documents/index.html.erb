
<div class="container">
<%= render "layouts/nav_user" %>
<h1>Список документов</h1>
<table class="table table-bordered">

  <tr>
    <th>Name</th>
    <th>Link</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.name %></td>
    <td><%= link_to document.link, document.link %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Destroy', [@room,document], method: :delete, data: { confirm: 'Are you sure?' } %></td>

  </tr>
<% end %>
</table>

